<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule "^diddle/?$" "index.php"
    RewriteRule "^diddle/([a-zA-Z0-9]+)/?$" "index.php?id=$1"
    RewriteRule "^diddle/v/([a-zA-Z0-9]+)/?$" "view.php?id=$1"
    RewriteRule "^diddle/c/([a-zA-Z0-9]+)/?$" "copy.php?id=$1"
</IfModule>

ErrorDocument 403 "/diddle/403.html"
ErrorDocument 404 "/diddle/404.html"
ErrorDocument 500 "/diddle/500.html"

